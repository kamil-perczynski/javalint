      <groupId>com.jetbrains.intellij.xml</groupId>
      <artifactId>xml-impl</artifactId>
      <version>${intellij-platform.version}</version>
      <exclusions>
        <exclusion>
          <groupId>com.jetbrains.intellij.platform</groupId>
